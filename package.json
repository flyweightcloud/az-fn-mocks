{
  "name": "az-fn-mocks",
  "version": "0.1.0",
  "description": "A simple and lightweight library to quickly build mocks and unit test Azure Functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "rimraf lib && tsc",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test": "jest",
    "predeploy": "yarn install && yarn lint && yarn test && yarn build",
    "package": "yarn lint && yarn build && np:em publish --access public"
  },
  "author": "Mark Percival <m@mdp.im>",
  "license": "MIT",
  "dependencies": {
    "@azure/functions": "^3.2.0"
  },
  "devDependencies": {
    "@flyweight.cloud/swaggerist": "^0.2.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "jest": "^29.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
